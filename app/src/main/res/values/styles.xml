<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="OverlayButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">@dimen/button_width</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:background">@drawable/bg_button_overlay</item>
        <item name="android:drawablePadding">@dimen/button_drawable_padding</item>
        <item name="android:fontFamily">@font/serif_bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/button_padding</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/primary_background_violet</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>
</resources>