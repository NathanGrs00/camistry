<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primary_background_violet">

    <TextView
        android:id="@+id/tv_interests_tag"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/content_label_height"
        android:layout_marginStart="@dimen/content_label_margin"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="@dimen/content_label_margin"
        android:background="@color/secondary_text_coral"
        android:fontFamily="serif"
        android:gravity="center"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:text="@string/title_interests"
        android:textColor="@color/primary_text_platinum"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_interests"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="@dimen/content_label_margin"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="@dimen/content_label_margin"
        android:layout_marginBottom="24dp"
        android:background="@drawable/bg_gray_rounded"
        android:fontFamily="serif"
        android:padding="10dp"
        android:text="@string/placeholder_interests"
        android:textColor="@color/primary_text_platinum"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_interests_tag"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>